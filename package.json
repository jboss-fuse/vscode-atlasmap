{
	"name": "atlasmap-viewer",
	"displayName": "AtlasMap Data Transformation editor by Red Hat",
	"description": "Opens a browser for AtlasMap Data Transformation editor",
	"version": "0.0.9",
	"publisher": "redhat",
	"icon": "icons/icon128.png",
	"preview": true,
	"config": {
		"atlasmapversion": "2.2.3"
	},
	"bugs": "https://github.com/jboss-fuse/vscode-atlasmap/issues",
	"homepage": "https://github.com/jboss-fuse/vscode-atlasmap",
	"repository": {
		"type": "git",
		"url": "https://github.com/jboss-fuse/vscode-atlasmap.git"
	},
	"contributors": [
		{
			"name": "Aur√©lien Pupier",
			"email": "apupier@redhat.com",
			"url": "http://redhat.com"
		},
		{
			"name": "Lars Heinemann",
			"email": "lheinema@redhat.com",
			"url": "http://redhat.com"
		}
	],
	"license": "Apache-2.0",
	"engines": {
		"vscode": "^1.57.0"
	},
	"keywords": [
		"atlasmap",
		"data",
		"transformation",
		"mapper"
	],
	"categories": [
		"Other"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "atlasmap.start",
				"title": "Open AtlasMap",
				"category": "AtlasMap"
			},
			{
				"command": "atlasmap.stop",
				"title": "Stop AtlasMap",
				"category": "AtlasMap"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "atlasmap.start",
					"when": "resourceExtname == .adm",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "AtlasMap Settings",
			"properties": {
				"atlasmap.openInBrowser": {
					"type": "string",
					"enum": [
						"Internal",
						"External (Default OS Browser)"
					],
					"default": "Internal",
					"description": "Select the preferred browser type to open AtlasMap UI in."
				},
				"redhat.telemetry.enabled": {
					"type": "boolean",
					"default": null,
					"markdownDescription": "Enable usage data and errors to be sent to Red Hat servers. Read our [privacy statement](https://developers.redhat.com/article/tool-data-collection).",
					"scope": "window"
				}
			}
		}
	},
	"activationEvents": [
		"onCommand:atlasmap.start",
		"onCommand:atlasmap.stop"
	],
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"clean": "rm -rf out || rmdir out /s /q",
		"postinstall": "node ./scripts/postinstall.js",
		"test": "node ./out/test/runTest.js",
		"update-deps": "npm update",
		"ui-test": "npm run compile && extest setup-and-run out/ui-test/all.js",
		"tslint": "gulp tslint"
	},
	"dependencies": {
		"@redhat-developer/vscode-redhat-telemetry": "^0.3.0",
		"child_process": "^1.0.2",
		"detect-port": "^1.3.0",
		"expand-home-dir": "^0.0.3",
		"fetch": "^1.1.0",
		"find-java-home": "^1.2.2",
		"path": "^0.12.7",
		"path-exists": "^4.0.0",
		"util": "^0.12.4"
	},
	"devDependencies": {
		"@types/chai": "^4.2.21",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.9.1",
		"@types/sinon": "^10.0.2",
		"@types/sinon-chai": "^3.2.5",
		"@types/vscode": "^1.57.0",
		"assert": "^2.0.0",
		"async-wait-until": "^2.0.7",
		"chai": "^4.3.4",
		"download": "^8.0.0",
		"file-uri-to-path": "^2.0.0",
		"file-url": "^3.0.0",
		"fs": "^0.0.1-security",
		"gulp": "^4.0.2",
		"gulp-tslint": "^8.1.4",
		"mocha": "^9.1.1",
		"mocha-jenkins-reporter": "^0.4.7",
		"mvn-artifact-download": "^6.0.0",
		"request": "^2.88.2",
		"sinon": "^11.1.2",
		"sinon-chai": "^3.7.0",
		"tslint": "^6.1.3",
		"typescript": "^4.4.3",
		"vscode-extension-tester": "^4.2.0",
		"vscode-extension-tester-native": "^3.0.2",
		"vscode-test": "^1.6.1"
	}
}
