{
	"name": "atlasmap-viewer",
	"description": "Opens a browser for AtlasMap",
	"version": "0.0.1",
	"publisher": "jboss-fuse",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/jboss-fuse/vscode-atlasmap.git"
	},
	"license": "Apache-2.0",
	"engines": {
		"vscode": "^1.29.1"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "atlasmap.open",
				"title": "Open AtlasMap in default system browser",
				"category": "AtlasMap"
			},
			{
				"command": "atlasmap.start",
				"title": "Start AtlasMap",
				"category": "AtlasMap"
			}
		],
		"configuration": {
			"type": "object",
			"title": "AtlasMap Settings",
			"properties": {
				"atlasmap.url": {
					"type": "string",
					"default": "localhost",
					"description": "Url of the AtlasMap instance used by the Open AtlasMap command."
				},
				"atlasmap.port": {
					"type": "string",
					"default": "8585",
					"description": "Port number of the AtlasMap instance to use."
				}
			}
		}
	},
	"activationEvents": [
		"onCommand:atlasmap.open",
		"onCommand:atlasmap.start"
	],
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"clean": "rm -rf out || rmdir out /s /q",
		"preinstall": "node ./scripts/preinstall.js",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run clean && npm run compile && node ./node_modules/vscode/bin/test",
		"update-deps": "node_modules/.bin/ncu --upgrade --loglevel verbose --packageFile package.json && npm update",
		"tslint": "gulp tslint"
	},
	"dependencies": {
		"fetch": "^1.1.0",
		"opn": "^5.4.0",
		"request": "^2.88.0",
		"vscode": "^1.1.26"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.18",
		"@types/sinon": "^5.0.7",
		"@types/sinon-chai": "^3.2.1",
		"chai": "^4.2.0",
		"gulp": "^4.0.0",
		"gulp-tslint": "^8.1.3",
		"mocha": "^5.2.0",
		"mvn-artifact-download": "^4.0.0",
		"sinon": "^7.2.2",
		"sinon-chai": "^3.3.0",
		"tslint": "^5.12.0",
		"typescript": "^3.2.2"
	}
}
