{
	"name": "atlasmap-viewer",
	"displayName": "AtlasMap Data Transformation editor by Red Hat",
	"description": "Opens a browser for AtlasMap Data Transformation editor",
	"version": "0.1.3",
	"publisher": "redhat",
	"icon": "icons/icon128.png",
	"preview": true,
	"config": {
		"atlasmapversion": "2.4.0-M.4"
	},
	"bugs": "https://github.com/jboss-fuse/vscode-atlasmap/issues",
	"homepage": "https://github.com/jboss-fuse/vscode-atlasmap",
	"repository": {
		"type": "git",
		"url": "https://github.com/jboss-fuse/vscode-atlasmap.git"
	},
	"contributors": [
		{
			"name": "Aur√©lien Pupier",
			"email": "apupier@redhat.com",
			"url": "http://redhat.com"
		},
		{
			"name": "Lars Heinemann",
			"email": "lheinema@redhat.com",
			"url": "http://redhat.com"
		}
	],
	"license": "Apache-2.0",
	"engines": {
		"vscode": "^1.57.0"
	},
	"keywords": [
		"atlasmap",
		"data",
		"transformation",
		"mapper"
	],
	"categories": [
		"Other"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "AtlasMap Settings",
			"properties": {
				"redhat.telemetry.enabled": {
					"type": "boolean",
					"default": null,
					"markdownDescription": "Enable usage data and errors to be sent to Red Hat servers. Read our [privacy statement](https://developers.redhat.com/article/tool-data-collection).",
					"scope": "window"
				}
			}
		},
		"commands": {
			"category": "AtlasMap",
			"title": "Create AtlasMap file",
			"command": "atlasmap.file.create"
		},
		"customEditors": [
			{
				"viewType": "atlasmap.editor",
				"displayName": "AtlasMap",
				"selector": [
					{
						"filenamePattern": "*.adm"
					}
				]
			}
		]
	},
	"activationEvents": [
		"workspaceContains:**/*.adm",
		"onLanguage:xml",
		"onLanguage:java",
		"onLanguage:groovy",
		"onLanguage:properties",
		"onLanguage:spring-boot-properties",
		"onLanguage:quarkus-properties",
		"onLanguage:kotlin",
		"onLanguage:javascript",
		"onLanguage:yaml",
		"onCommand:atlasmap.file.create",
		"onCustomEditor:atlasmap.editor"
	],
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./ && npm run tslint",
		"watch": "tsc -w -p ./",
		"clean": "rm -rf out || rmdir out /s /q",
		"postinstall": "node ./scripts/postinstall.js",
		"test": "node ./out/test/runTest.js",
		"update-deps": "npm update",
		"ui-test": "npm run compile && extest setup-and-run out/ui-test/all.js",
		"tslint": "gulp tslint"
	},
	"dependencies": {
		"@redhat-developer/vscode-redhat-telemetry": "^0.4.2",
		"child_process": "^1.0.2",
		"chokidar": "^3.5.2",
		"download": "^8.0.0",
		"expand-home-dir": "^0.0.3",
		"fetch": "^1.1.0",
		"find-java-home": "^1.2.2",
		"md5": "^2.3.0",
		"path": "^0.12.7",
		"path-exists": "^4.0.0",
		"util": "^0.12.4",
		"valid-filename": "^4.0.0"
	},
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^17.0.16",
		"@types/sinon": "^10.0.10",
		"@types/sinon-chai": "^3.2.8",
		"@types/vscode": "^1.57.0",
		"assert": "^2.0.0",
		"async-wait-until": "^2.0.12",
		"chai": "^4.3.4",
		"file-uri-to-path": "^2.0.0",
		"file-url": "^3.0.0",
		"fs": "^0.0.1-security",
		"glob": "^7.2.0",
		"gulp": "^4.0.2",
		"gulp-tslint": "^8.1.4",
		"mocha": "^9.2.0",
		"mocha-jenkins-reporter": "^0.4.7",
		"mvn-artifact-download": "^6.0.0",
		"request": "^2.88.2",
		"sinon": "^12.0.1",
		"sinon-chai": "^3.7.0",
		"tslint": "^6.1.3",
		"typescript": "^4.5.5",
		"vscode-extension-tester": "^4.2.3",
		"vscode-test": "^1.6.1"
	}
}
